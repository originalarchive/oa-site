---
import PageLayout from "../../layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

// 1. Fetch the collection once
const allPhotos = await getCollection("photos");

// 2. Debug log to terminal (Keep this until you see 'cuba' in the list)
console.log("Found slugs:", allPhotos.map(p => p.slug));

// 3. SAFE SORTING: Alphabetical by title (A-Z)
const photos = allPhotos.sort((a, b) => {
  const titleA = a.data.title || "";
  const titleB = b.data.title || "";
  return titleA.localeCompare(titleB);
});
---

<PageLayout title="Photography" description="A collection of photo galleries and portfolios.">
  <div class="w-full px-6 py-4">
    
    <div class="mb-10 relative z-10">
      <h1 class="text-4xl font-bold tracking-tight text-black dark:text-white">Photo Albums</h1>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-1">
      {photos.map((photo, index) => {
        const isExternal = photo.data.type === "external";
        const targetUrl = isExternal ? photo.data.externalUrl : `/photos/${photo.slug}`;
        const isLCP = index < 4;

        return (
          <a 
            href={targetUrl} 
            target={isExternal ? "_blank" : "_self"} 
            class="group relative aspect-square overflow-hidden rounded-2xl bg-neutral-100 dark:bg-neutral-900 border border-black/5 dark:border-white/5 transition-all duration-300 hover:shadow-xl"
          >
            {photo.data.thumbnail ? (
              <Image 
                src={photo.data.thumbnail} 
                alt={photo.data.title} 
                width={600} 
                height={600} 
                loading={isLCP ? "eager" : "lazy"}
                fetchpriority={isLCP ? "high" : "auto"}
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
            ) : (
              <div class="h-full w-full flex items-center justify-center opacity-20 italic text-xs">
                No Thumbnail
              </div>
            )}
            
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex items-end p-5 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="w-full">
                <h2 class="text-white text-sm font-semibold leading-tight">{photo.data.title}</h2>
                {photo.data.date && (
                  <p class="text-white/70 font-mono text-[10px] uppercase tracking-widest mt-1">
                    {new Date(photo.data.date).getFullYear()}
                  </p>
                )}
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</PageLayout>