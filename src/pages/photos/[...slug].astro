---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";

export async function getStaticPaths() {
  const photos = await getCollection("photos");
  return photos
    .filter(p => p.data.type !== "external")
    .map((p) => ({
      params: { slug: p.slug },
      props: { photoEntry: p },
    }));
}

const { photoEntry } = Astro.props;
const { Content } = await photoEntry.render();
---

<PageLayout title={photoEntry.data.title}>
  <div class="max-w-6xl mx-auto px-6 pt-50 pb-24">
    
    <div class="mb-1">
      <a 
        href="/photos" 
        class="group inline-flex items-center gap-2 text-sm font-sans uppercase tracking-widest text-stone-500 hover:text-black dark:text-stone-400 dark:hover:text-white transition-all duration-300"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="16" 
          height="16" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2.5" 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          class="transition-transform duration-300 group-hover:-translate-x-1"
        >
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Back to Albums
      </a>
    </div>

    <header class="mb-2 relative z-10">
      <h1 class="text-5xl md:text-4xl font-bold tracking-tighter uppercase leading-[0.85] text-stone-900 dark:text-white">
        {photoEntry.data.title}
      </h1>
      {photoEntry.data.description && (
        <p class="mt-2 text-xl font text-stone-600 dark:text-stone-400">
          {photoEntry.data.description}
        </p>
      )}
    </header>

    <div class="album-content-root">
      <div id="photo-content" class="prose dark:prose-invert max-w-none mb-12">
        <Content />
      </div>
      
      <div id="photo-grid" class="flex flex-wrap gap-1 justify-start bg-white dark:bg-stone-950 p-1">
      </div>
    </div>
  </div>
</PageLayout>

<script>
  function setupAlbum() {
    const source = document.getElementById('photo-content');
    const grid = document.getElementById('photo-grid');
    
    if (!source || !grid || grid.children.length > 0) return;

    const images = source.querySelectorAll('img');
    images.forEach(img => {
      const container = document.createElement('div');
      container.className = 'gallery-image-container';
      
      img.style.display = 'block';
      img.style.width = '100%';
      img.style.height = '100%';
      img.removeAttribute('height');
      img.removeAttribute('width');
      
      container.appendChild(img);
      grid.appendChild(container);
    });
    
    source.style.display = 'none';
  }

  document.addEventListener('astro:page-load', setupAlbum);
  setupAlbum();
</script>

<style is:global>
  #photo-grid {
    display: flex !important;
    flex-wrap: wrap !important;
    gap: 8px !important; /* This creates the consistent white borders */
    justify-content: flex-start !important;
  }

  .gallery-image-container {
    height: 300px !important; /* Matches your old site height */
    flex: 1 1 auto !important; /* Allows images to share the row */
    overflow: hidden !important;
    background-color: white !important;
    position: relative;
    max-width: 100%;
  }

  .gallery-image-container img {
    height: 100% !important;
    width: auto !important; /* Prevents the 'stretching' you see in your screenshot */
    min-width: 100% !important;
    object-fit: cover !important; /* Crops slightly to keep the rows perfectly level */
    display: block !important;
  }

#photo-grid {
  display: flex !important;
  flex-wrap: wrap !important;
  gap: 8px !important;
  /* Change justify-start to center */
  justify-content: center !important; 
  background-color: transparent !important; /* Removes the white box background */
}

/* Remove the ::after block entirely if you use justify-center */
#photo-grid::after {
  display: none;
}
</style>