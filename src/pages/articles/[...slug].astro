---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";

export async function getStaticPaths() {
  const articles = (await getCollection("articles"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
  
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: article,
  }));
}

type Props = CollectionEntry<"articles">;

const article = Astro.props;
const { Content } = await article.render();

const allArticles = await getCollection("articles");
const relatedArticles = allArticles
  .filter((p) => 
    !p.data.draft && 
    p.slug !== article.slug &&
    p.data.tags?.some((tag) => article.data.tags?.includes(tag))
  )
  .slice(0, 3);
  

---

<PageLayout title={article.data.title} description={article.data.description}>
  <div class="max-w-2xl mx-auto">
    
    <div class="animate mt-8 [backface-visibility:hidden] [transform:translateZ(0)]">
      <a href="/articles" class="group flex items-center gap-2 text-sm font-mono uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1"><path d="m15 18-6-6 6-6"/></svg>
        Back to Articles
      </a>
    </div>

    <article class="animate py-16">
      <header class="mb-12">
        <div class="flex items-center gap-2 mb-6 text-sm opacity-60 font-mono uppercase tracking-widest">
          <time datetime={article.data.date.toISOString()}>
            {article.data.date.toLocaleDateString("en-GB", {
              day: "2-digit",
              month: "long",
              year: "numeric",
            })}
          </time>
          {article.data.tags && article.data.tags.length > 0 && (
            <>
              <span>â€¢</span>
              <div class="flex gap-2">
                {article.data.tags.map((tag) => (
                  <span class="opacity-80">#{tag}</span>
                ))}
              </div>
            </>
          )}
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-black dark:text-white leading-tight">
          {article.data.title}
        </h1>
      </header>
      
      <div class="prose prose-neutral dark:prose-invert max-w-none prose-img:rounded-xl">
        <Content />
      </div>
    </article>

    {relatedArticles.length > 0 && (
      <section class="animate mt-24 border-t border-black/5 dark:border-white/10 pt-12">
        <h2 class="text-sm font-mono uppercase tracking-[0.2em] opacity-40 mb-8">
          Related Reading
        </h2>
        <ul class="space-y-4">
          {relatedArticles.map((related) => (
            <li>
              <ArrowCard entry={related} />
            </li>
          ))}
        </ul>
      </section>
    )}

    <div class="animate py-20 border-t border-black/5 dark:border-white/10 mt-12">
      <a href="/articles" class="group flex items-center justify-center gap-2 text-sm font-mono uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity bg-stone-100 dark:bg-stone-800 py-4 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1"><path d="m15 18-6-6 6-6"/></svg>
        Return to Articles
      </a>
    </div>
  </div>
</PageLayout>
