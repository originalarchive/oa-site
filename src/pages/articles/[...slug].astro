---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import SafeImage from "@components/SafeImage.astro";

export async function getStaticPaths() {
  const articles = await getCollection("articles");
  
  // Only build pages for non-drafts
  const publishedArticles = articles.filter((post) => !post.data.draft);

  return publishedArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article }, // Passing it as an object named 'article'
  }));
}

// Define the shape of our props clearly
interface Props {
  article: CollectionEntry<"articles">;
}

const { article } = Astro.props;
const { Content } = await article.render();

// Fetch related articles
const allArticles = await getCollection("articles");
const relatedArticles = allArticles
  .filter((p) => 
    !p.data.draft && 
    p.slug !== article.slug &&
    p.data.tags?.some((tag) => article.data.tags?.includes(tag))
  )
  .slice(0, 3);
---

<PageLayout title={article.data.title} description={article.data.description}>
  <div class="max-w-2xl mx-auto px-6 pt-6 pb-24">
    
    <div class="mb-6">
      <a href="/articles" class="group flex items-center gap-2 text-sm font-mono uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1"><path d="m15 18-6-6 6-6"/></svg>
        Back to Articles
      </a>
    </div>

    <article>
      {/* 2. ADD HERO IMAGE HERE */}
      {article.data.coverImage && (
        <div class="mb-8 rounded-2xl overflow-hidden aspect-video">
           <SafeImage 
            imageMetadata={article.data.coverImage} 
            alt={article.data.title} 
            className="w-full h-full object-cover"
          />
        </div>
      )}

      <header class="block mb-6 relative">
        {/* ... (Your existing header content: date, tags, title) ... */}
      </header>

      <div class="prose prose-neutral dark:prose-invert max-w-none prose-headings:scroll-mt-24">
        <Content />
      </div>
    </article>

    {/* ... (Rest of the file: Related reading, etc) ... */}
  </div>
</PageLayout>