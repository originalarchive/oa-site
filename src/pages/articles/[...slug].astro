---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";

export async function getStaticPaths() {
  const articles = (await getCollection("articles"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
  
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: article,
  }));
}

type Props = CollectionEntry<"articles">;

const article = Astro.props;
const { Content } = await article.render();

const allArticles = await getCollection("articles");
const relatedArticles = allArticles
  .filter((p) => 
    !p.data.draft && 
    p.slug !== article.slug &&
    p.data.tags?.some((tag) => article.data.tags?.includes(tag))
  )
  .slice(0, 3);
---

<PageLayout title={article.data.title} description={article.data.description}>
  {/* pt-32 clears the site header. pb-24 gives space at the bottom */}
  <div class="max-w-2xl mx-auto px-6 pt-6 pb-24">
    
    {/* Back Button - No animation class to prevent jumping */}
    <div class="mb-6">
      <a href="/articles" class="group flex items-center gap-2 text-sm font-mono uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1"><path d="m15 18-6-6 6-6"/></svg>
        Back to Articles
      </a>
    </div>

    <article>
      {/* 1. Resetting the Header: Explicitly block any animation and force natural spacing */}
      <header class="block mb-6 relative" style="transform: none !important; opacity: 1 !important; filter: none !important;">
        <div class="flex items-center gap-2 mb-6 text-sm opacity-60 font-mono uppercase tracking-widest">
          <time datetime={article.data.date.toISOString()}>
            {article.data.date.toLocaleDateString("en-GB", {
              day: "2-digit",
              month: "long",
              year: "numeric",
            })}
          </time>
          {article.data.tags && article.data.tags.length > 0 && (
            <>
              <span>â€¢</span>
              <div class="flex gap-2">
                {article.data.tags.map((tag) => (
                  <span class="opacity-80">#{tag}</span>
                ))}
              </div>
            </>
          )}
        </div>
        
        {/* Title: Forced to be static to stop the paragraph overlap */}
        <h1 class="text-4xl md:text-5xl font-bold text-black dark:text-white leading-tight m-0">
          {article.data.title}
        </h1>
      </header>
      
      {/* 2. Content: The prose class handles the spacing for "Headings" and text */}
      <div class="prose prose-neutral dark:prose-invert max-w-none prose-headings:scroll-mt-24">
        <Content />
      </div>
    </article>
    
    <article>
      {/* ... your header and content ... */}
    </article>

    {/* Bottom Navigation */}
    <div class="py-12 border-t border-black/5 dark:border-white/10 mt-12">
      <a href="/articles" class="group flex items-center gap-2 text-sm font-mono uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1">
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Back to All Articles
      </a>
    </div>

    {relatedArticles.length > 0 && (
      <section class="mt-12 ...">
        {/* ... related articles ... */}
      </section>
    )}

    {relatedArticles.length > 0 && (
      <section class="mt-24 border-t border-black/5 dark:border-white/10 pt-12">
        <h2 class="text-sm font-mono uppercase tracking-[0.2em] opacity-40 mb-8">
          Related Reading
        </h2>
        <ul class="space-y-4">
          {relatedArticles.map((related) => (
            <li>
              <ArrowCard entry={related} />
            </li>
          ))}
        </ul>
      </section>
    )}
  </div>
</PageLayout>

<style is:global>
  /* 3. The Nuclear Reset for Stacking Issues */
  
  /* Kill the backdrop blur on the main nav to stop the 'blur box' */
  header#header {
    backdrop-filter: none !important;
    -webkit-backdrop-filter: none !important;
    background-color: #f5f5f4 !important; /* Light Mode Stone */
  }

  .dark header#header {
    background-color: #1c1917 !important; /* Dark Mode Stone */
  }

  /* Force the title and content to follow a standard vertical flow */
  h1, .prose p, .prose h2, .prose h3 {
    position: relative !important;
    transform: none !important;
    opacity: 1 !important;
  }

  /* Give headings inside the article more breathing room */
  .prose :where(h1, h2, h3):first-child {
    margin-top: 0 !important;
  }
</style>