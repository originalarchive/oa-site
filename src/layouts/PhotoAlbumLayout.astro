---
import PageLayout from "./PageLayout.astro";
const { frontmatter } = Astro.props;
---

<PageLayout title={frontmatter.title} description={frontmatter.description}>
  <slot />
</PageLayout>

<style is:global>
  /* 1. Hide the MDX titles to prevent double-headers */
  #photo-content h1, 
  #photo-content h2 { 
    display: none !important; 
  }

  /* 2. Hide images in the source so the script can move them to the grid */
  #photo-content img { display: none !important; }
  
  /* 3. Masonry Grid Styling */
  #photo-grid img {
    @apply rounded-sm w-full h-auto cursor-zoom-in transition-opacity duration-500 hover:opacity-80;
    display: block;
    break-inside: avoid;
    margin-bottom: 2rem;
  }
</style>