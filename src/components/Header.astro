---
import { LINKS } from "@consts";
import ThemeToggle from "@components/ThemeToggle.astro";
import { Image } from 'astro:assets';
// RECOMMENDED: Move image to src/assets/hero.png
import heroImage from "../assets/hero.png"; 

const pathname = new URL(Astro.request.url).pathname;
---

<header class="fixed top-0 left-0 right-0 z-[100] bg-white/40 dark:bg-black/40 backdrop-blur-xl border-b border-black/5 dark:border-white/5 transition-all duration-300">
  <div class="mx-auto max-w-4xl px-6">
    <nav class="flex items-center justify-between h-16">
      <a href="/" class="group flex items-center h-full text-xl font-semibold tracking-tight transition-opacity hover:opacity-80">
        <div class="h-full py-0.5 flex items-center"> 
          <Image 
            src={heroImage} 
            alt="Original Archive" 
            class="h-full w-auto object-contain transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <span class="ml-2">original archive</span>
      </a>
      
      <div class="flex items-center gap-4">
        <ul class="hidden sm:flex items-center">
          {LINKS.map((link, i) => (
            <Fragment key={link.HREF}>
              <li>
                <a
                  href={link.HREF}
                  class={`text-sm font-medium transition-all ${
                    pathname === link.HREF || pathname.startsWith(link.HREF + "/")
                      ? "text-black dark:text-white"
                      : "text-black/50 dark:text-white/50 hover:text-black dark:hover:text-white"
                  }`}
                >
                  {link.TEXT}
                </a>
              </li>
              {i < LINKS.length - 1 && (
                <span class="mx-3 text-black/20 dark:text-white/20 select-none">|</span>
              )}
            </Fragment>
          ))}
        </ul>
        
        <div class="flex items-center gap-2 ml-2">
          <ThemeToggle />
          
          <button
            id="mobile-menu-toggle"
            class="sm:hidden p-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/10 transition-colors"
            aria-label="Toggle menu"
          >
            <svg id="menu-icon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </nav>
    
    <div id="mobile-menu" class="hidden sm:hidden overflow-hidden transition-all duration-300 ease-in-out border-t border-black/5 dark:border-white/5 bg-white/90 dark:bg-black/90 backdrop-blur-lg">
      <ul class="flex flex-col gap-4 py-6 px-2">
        {LINKS.map((link) => (
          <li key={link.HREF}>
            <a
              href={link.HREF}
              class={`text-lg font-medium block transition-opacity ${
                pathname === link.HREF || pathname.startsWith(link.HREF + "/")
                  ? "opacity-100"
                  : "opacity-60"
              }`}
            >
              {link.TEXT}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script>
  function setupHeader() {
    const menuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (!menuToggle || !mobileMenu) return;

    const toggle = () => {
      mobileMenu.classList.toggle('hidden');
    };

    // Use click, but touchstart helps iOS respond instantly
    menuToggle.addEventListener('click', toggle);
  }

  setupHeader();
  // Critical for View Transitions
  document.addEventListener('astro:after-swap', setupHeader);
</script>