---
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"articles"> | CollectionEntry<"coffee"> | CollectionEntry<"photos">;
}

const { entry } = Astro.props;

// Coffee entries use 'name', articles/photos use 'title'
const title = entry.collection === "coffee" ? entry.data.name : entry.data.title;

// Coffee entries use roaster/origin as a description
const description = entry.collection === "coffee" 
  ? `${entry.data.roaster} â€¢ ${entry.data.origin}` 
  : entry.data.description;
---

<a href={`/${entry.collection}/${entry.slug}`} class="group flex flex-col gap-2 p-4 rounded-xl border border-black/5 dark:border-white/5 hover:bg-black/5 dark:hover:bg-white/5 transition-colors duration-300">
  
  <div class="flex justify-between items-start gap-4">
    <div class="font-semibold text-black dark:text-white transition-colors">
      {entry.data.title}
    </div>
    
    <div class="flex-shrink-0 pt-1">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 24 24"
        fill="none" 
        stroke="currentColor" 
        stroke-width="2.5" 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        class="size-5 group-hover:translate-x-1 transition-transform duration-300"
      >
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </div>
  </div>

  {entry.data.description && (
    <p class="text-sm opacity-60 line-clamp-5 transition-opacity group-hover:opacity-100">
      {entry.data.description}
    </p>
  )}
</a>