<ul class="flex flex-wrap gap-2 list-none p-0">
  {SOCIALS.map((social) => {
    // We normalize the name to lowercase to match your iconMap keys
    const iconKey = social.NAME.toLowerCase();
    const iconHtml = iconMap[iconKey];

    return (
      <li>
        <a
          href={social.HREF}
          target="_blank"
          aria-label={social.NAME}
          class="flex size-10 items-center justify-center rounded-lg border border-black/5 bg-stone-200/50 hover:bg-stone-300/50 dark:border-white/5 dark:bg-stone-800/50 dark:hover:bg-stone-700/50 transition-all duration-300"
        >
          {/* If we have an icon in the map, show it. Otherwise, show text. */}
          {iconHtml ? (
            <Fragment set:html={iconHtml} />
          ) : (
            <span class="text-xs font-bold">{social.NAME.slice(0, 2)}</span>
          )}
        </a>
      </li>
    );
  })}
</ul>