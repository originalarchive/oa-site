---
import type { CollectionEntry } from "astro:content";

interface Props {
  coffeeEntries: CollectionEntry<"coffee">[];
}

const { coffeeEntries } = Astro.props;

// Helper to turn 1-5 numbers into Star strings
const renderStars = (num: number) => "★".repeat(num) + "☆".repeat(5 - num);

// Status color lookup for the overall rating badge
const statusColors = {
  "Buy again": "bg-green-500/10 text-green-600 dark:text-green-400 border-green-500/20",
  "Don't buy": "bg-red-500/10 text-red-600 dark:text-red-400 border-red-500/20",
  "TBC": "bg-teal-500/10 text-teal-600 dark:text-teal-400 border-teal-500/20",
  "It's OK": "bg-stone-500/10 text-stone-600 dark:text-stone-400 border-stone-500/20",
};
---

<div class="space-y-4">
  {coffeeEntries.map(async (entry) => {
    const { Content } = await entry.render();
    const d = entry.data;
    const currentStatus = d.rating.overall;

    return (
      <div 
        class="coffee-card group border border-black/5 dark:border-white/10 rounded-xl p-4 transition-all hover:bg-black/[0.02] dark:hover:bg-white/[0.02]"
        data-date={d.dateBrewed.toISOString()}
      >
        {/* HIDDEN SEARCH KEYWORDS: Included here so item.innerText catches them */}
        <span class="sr-only invisible h-0 w-0 overflow-hidden">
          {d.process} {d.processDetails} {d.region} {d.variety}
        </span>

        <details class="group/details">
          <summary class="list-none outline-none cursor-pointer">
            <div class="flex justify-between items-stretch gap-4">
              
              {/* LEFT SIDE: Identity & Stars */}
              <div class="flex-1 flex flex-col justify-between">
                <div>
                  <h3 class="font-bold text-lg leading-tight">{d.name}</h3>
                  <div class="flex items-center gap-2 text-sm opacity-60 mt-1">
                    {d.roasterUrl ? (
                      <a 
                        href={d.roasterUrl} 
                        target="_blank" 
                        class="hover:underline text-black dark:text-white font-medium"
                        onclick="arguments[0].stopPropagation();"
                      >
                        {d.roaster}
                      </a>
                    ) : (
                      <span>{d.roaster}</span>
                    )}
                    <span>•</span>
                    <span>{d.origin}</span>
                  </div>
                </div>

                <div class="mt-3 flex gap-4 text-[10px] font-mono uppercase tracking-widest opacity-50">
                  <span>Flv: <span class="text-black dark:text-white">{renderStars(d.rating.flavor)}</span></span>
                  <span>Bdy: <span class="text-black dark:text-white">{renderStars(d.rating.body)}</span></span>
                  <span>Acd: <span class="text-black dark:text-white">{renderStars(d.rating.acidity)}</span></span>
                </div>
              </div>

              {/* RIGHT SIDE: Date, Overall Badge, and the Bottom Arrow */}
              <div class="flex flex-col items-end justify-between shrink-0 border-l border-black/5 dark:border-white/5 pl-4">
                <div class="text-xs font-mono opacity-40 uppercase tracking-tighter">
                  <span class="text-[9px] opacity-70">Brewed:</span> 
                  {d.dateBrewed.toLocaleDateString("en-GB", { day: '2-digit', month: 'short' })}
                </div>

                <div class="flex flex-col items-end gap-2 mt-auto">
                  <div class:list={[
                    "text-[10px] font-bold uppercase tracking-tighter py-1 rounded border text-center w-24",
                    statusColors[currentStatus] || "bg-black/5 dark:bg-white/10"
                  ]}>
                    {currentStatus}
                  </div>
                  
                  <div class="opacity-20 group-hover/details:opacity-100 transition-all duration-300 group-open/details:rotate-180 pr-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                      <path d="m6 9 6 6 6-6"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </summary>

          {/* EXPANDED SECTION */}
          <div class="mt-6 border-t border-black/5 dark:border-white/5 pt-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-4 rounded-lg bg-stone-100/50 dark:bg-stone-900/50 text-sm border border-black/5 dark:border-white/5">
              <div class="space-y-1.5 font-mono text-[11px]">
                <p><span class="opacity-50 uppercase text-[9px]">Region:</span> {d.region || "—"}</p>
                <p><span class="opacity-50 uppercase text-[9px]">Farm:</span> {d.farm || d.producer || "—"}</p>
                <p><span class="opacity-50 uppercase text-[9px]">Variety:</span> {d.variety || "—"}</p>
                <p><span class="opacity-50 uppercase text-[9px]">Elevation:</span> {d.elevation || "—"}</p>
                <p><span class="opacity-50 uppercase text-[9px]">Process:</span> {d.process} {d.processDetails && `(${d.processDetails})`}</p>
              </div>
              <div class="space-y-1.5 border-t md:border-t-0 md:border-l border-black/5 dark:border-white/5 pt-4 md:pt-0 md:pl-6 font-mono text-[11px]">
                <p>
                  <span class="opacity-50 uppercase text-[9px]">Roasted:</span> 
                  {d.roastDate?.toLocaleDateString("en-GB") || "—"}
                </p>
                <p><span class="opacity-50 uppercase text-[9px]">Method:</span> {d.brewMethod} ({d.grindSize})</p>
                <p><span class="opacity-50 uppercase text-[9px]">Temp/Ratio:</span> {d.waterTemp || "—"} / {d.ratio || "—"}</p>
                <div class="pt-2">
                  <span class="opacity-50 uppercase text-[9px] block mb-1">Brew Notes:</span>
                  <p class="italic opacity-80 leading-relaxed font-sans text-xs">{d.brewNotes || "No specific brew notes."}</p>
                </div>
              </div>
            </div>

            <div class="mt-6 prose prose-sm dark:prose-invert max-w-none border-t border-black/5 dark:border-white/5 pt-4">
              <h4 class="text-[10px] font-mono uppercase opacity-40 mb-3 tracking-[0.2em]">Tasting Notes</h4>
              <Content />
            </div>
          </div>
        </details>
      </div>
    );
  })}
</div>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
</style>